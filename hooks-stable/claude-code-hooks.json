{
  "stop": {
    "description": "Prevents workflow abandonment by enforcing completion",
    "script": "~/.agent-os/hooks/stop-hook.sh",
    "enabled": true,
    "priority": "high",
    "triggers": [
      "workflow abandonment patterns",
      "incomplete Agent OS workflows",
      "summary without execution"
    ]
  },
  "postToolUse": {
    "description": "Auto-commits Agent OS documentation changes",
    "script": "~/.agent-os/hooks/post-tool-use-hook.sh", 
    "enabled": true,
    "priority": "medium",
    "triggers": [
      "Agent OS documentation modified",
      "spec files updated",
      "task status changes"
    ]
  },
  "userPromptSubmit": {
    "description": "Injects contextual Agent OS information",
    "script": "~/.agent-os/hooks/user-prompt-submit-hook.sh",
    "enabled": true,
    "priority": "medium",
    "context_injection": {
      "workflow_state": true,
      "project_context": true,
      "git_status": true,
      "agent_os_files": true
    }
  },
  "global_settings": {
    "max_execution_time": 500,
    "performance_monitoring": true,
    "error_logging": true,
    "debug_mode": false,
    "context_cache_ttl": 60
  },
  "agent_os_integration": {
    "version": "1.0.0",
    "compatible_versions": [">=1.0.0"],
    "required_utilities": [
      "~/.agent-os/hooks/lib/workflow-detector.sh",
      "~/.agent-os/hooks/lib/git-utils.sh", 
      "~/.agent-os/hooks/lib/context-builder.sh"
    ],
    "workflow_patterns": {
      "spec_execution": {
        "enforce_completion": true,
        "auto_commit_docs": true,
        "inject_context": true
      },
      "dirty_workspace": {
        "warn_user": true,
        "suggest_cleanup": true,
        "block_if_critical": false
      },
      "feature_branch": {
        "remind_pr_creation": true,
        "check_issue_linking": true
      }
    }
  },
  "hook_behaviors": {
    "stop_hook": {
      "detect_abandonment": [
        "quality check summaries without proceeding to git workflow",
        "implementation summaries without actual execution", 
        "ready for next phase without completing current phase"
      ],
      "enforcement_actions": [
        "block premature completion",
        "redirect to workflow continuation",
        "provide specific next step guidance"
      ]
    },
    "post_tool_use_hook": {
      "auto_commit_patterns": [
        ".agent-os/product/*.md",
        ".agent-os/specs/*/tasks.md",
        ".agent-os/specs/*/spec.md",
        ".agent-os/specs/*/sub-specs/*.md"
      ],
      "commit_message_format": "docs: update Agent OS documentation\n\nðŸ¤– Auto-committed by Claude Code hooks\nCo-Authored-By: Claude <noreply@anthropic.com>"
    },
    "user_prompt_submit_hook": {
      "context_types": [
        "workflow_state",
        "current_spec_info", 
        "git_repository_status",
        "agent_os_file_references"
      ],
      "performance_target": "<500ms",
      "cache_context": true
    }
  }
}